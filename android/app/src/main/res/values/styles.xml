        <!-- Show a splash screen on the activity. Automatically removed when
             Flutter draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <style name="beertastic_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/beertastic_ochreYellow</item>
        <item name="colorPrimaryDark">@color/beertastic_ochreYellow</item>
        <item name="colorAccent">@color/beertastic_light_grey</item>
    </style>

</resources>
